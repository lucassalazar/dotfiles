#!/bin/sh

# Main monitor
main=eDP-1-1
# External monitor
external=HDMI-0

if xrandr | grep "$external disconnected"; then
    xrandr --output "$external" --off
    xrandr --output "$main" --rate 60 --mode 2560x1600 --primary
else
    xrandr --output "$main" --mode 2560x1600 --primary \
           --output "$external" --mode 2560x1440 --rate 120 --left-of "$main"
fi

~/.local/scripts/wallpapercfg

