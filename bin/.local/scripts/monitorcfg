#!/bin/sh

# Primary monitor
primary=eDP-1-1
# Secondary monitor
secondary=HDMI-0

if  xrandr | grep -q "$secondary d"; then
	xrandr --output "$primary" --mode 1920x1080 --primary
    xrandr --output "$secondary" --off
else
	xrandr --output "$primary" --mode 1920x1080 --primary
    xrandr --output "$secondary" --mode 1920x1080
    xrandr --output "$secondary" --right-of "$primary"
fi

exec ~/.local/scripts/wallpapercfg
