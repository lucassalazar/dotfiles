#!/bin/sh

# Main monitor
main=eDP-1-1
# External monitor
external=HDMI-0

if  xrandr | grep -q "$external d"; then
	xrandr --output "$main" --mode 1920x1080 --primary
    xrandr --output "$external" --off
else
	xrandr --output "$main" --mode 1920x1080 --primary
    xrandr --output "$external" --mode 1920x1080 
    xrandr --output "$external" --left-of "$main"
fi

exec ~/.local/scripts/wallpapercfg
